{{!< default}}

  {{!-- On homepage, show each featured post in it's entirety --}}
  {{#foreach posts}}
    {{#if featured}}

      <article class="post-container post-container--single">

        <header class="post-header">
          <h1 class="post-title">{{{title}}}</h1>
        </header>

        <section class="{{post_class}}">
          {{content}}
        </section>

      </article>

    {{/if}}
  {{/foreach}}
